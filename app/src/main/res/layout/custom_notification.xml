<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1E5EC">

    <TextView
        android:id="@+id/mtitle"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-2dp"
        android:layout_toStartOf="@+id/imagenotiright"
        android:layout_toEndOf="@+id/imagenotileft"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mtext"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_below="@+id/mtitle"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/imagenotiright"
        android:layout_toEndOf="@+id/imagenotileft"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imagenotiright"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/crow2" />

    <ImageView
        android:id="@+id/imagenotileft"
        android:layout_width="102dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/crow" />

</RelativeLayout>